<%= decidim_form_for @form, html: { class: "form" } do |f| %>
  <div class="card">
    <div class="card-divider">
      <h2 class="card-title"><%= t(".title") %></h2>
    </div>

    <div class="card-section">
      <%= f.hidden_field :channel_id, value: params["name"] %>

      <div class="row column">
        <%= f.text_field :video_name %>
      </div>

      <div class="row column">
        <%= f.text_area :video_description %>
      </div>
    </div>
  </div>

  <div class="button--double form-general-submit">
    <%= f.submit t(".submit") %>
  </div>
<% end %>
